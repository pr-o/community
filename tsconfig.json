{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "interfaces/*": ["src/interfaces/*"],
      "lib/*": ["src/lib/*"],
      "pages/*": ["src/pages/*"],
      "tests/*": ["src/tests/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "@emotion/react/types/css-prop"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types",
      "custom.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "./*.d.ts"
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*",
  ],
}
